<div data-spy="grid">
    <!--    FILTER-->
    <?= $this->filter($this->grid) ?>
    <!--    GRID-->
    <div class="grid">
        <table class="table table-fixed table-striped">
            <thead>
            <tr>
                <?php foreach ($this->grid->getColumns() as $alias => $column) : ?>
                    <?php if ($order = $this->grid->order($alias)) : ?>
                        <th><a href="<?= $order ?>"><?= $column ?></a></th>
                    <?php else : ?>
                        <th><?= $column ?></th>
                    <?php endif; ?>
                <?php endforeach; ?>
                <th width="96px"></th>
            </tr>
            </thead>
            <tbody>
            <?php foreach ($this->grid->getData() as $row) : ?>
                <tr>
                    <?php foreach ($row as $key => $value) : ?>
                        <td><?= $value ?></td>
                    <?php endforeach; ?>
                    <td>
                        <a class="dialog btn btn-primary btn-xs"
                           data-ajax-method="get"
                           href="<?=$this->url('comment/default', ['controller' => 'index', 'action' => 'edit', 'id' => $row['id']]) ?>">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-danger btn-xs del-entity del-comment"
                           data-ajax-method="delete"
                           href="<?= $this->url('comment/default', ['controller' => 'index', 'action' => 'delete', 'id' => $row['id']]) ?>">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
        <!--        PAGINATION-->
        <?= $this->pagination($this->grid, ['class' => ['pagination', 'pull-left']]) ?>
        <!--    LIMIT-->
        <?= $this->limit($this->grid, ['class' => 'pagination pagination-small pull-right']) ?>
    </div>
</div>
<script>
    require(['comment', 'fury', 'fury.ajax']);
</script>
